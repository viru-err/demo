{
    "plugins": [
        "jsx"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "jsx/mark-used-vars": "error",
        "jsx/no-undef": "error",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "lines-between-class-members": "off",
        "operator-linebreak": "off",
        "default-case": "off",
        "comma-dangle": [
            2,
            "always-multiline"
        ]
    },
    "globals": {
        "main": "readonly",
        "app": "readonly",
        "db": "readonly",
        "tag": "readonly"
    },
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
                "paths": [
                    "app"
                ]
            }
        }
    }
}